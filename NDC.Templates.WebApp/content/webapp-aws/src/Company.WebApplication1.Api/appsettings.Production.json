{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
#if (IncludeJobs)
      ,"Hangfire": "Information"
#endif
    }
  },

  "ConnectionStrings": {
#if (HasDatabase)
    "Database": "", // Set via environment variable or cloud configuration
#endif
#if (IncludeCache)
    "Redis": "", // Set via environment variable or cloud configuration  
#endif
#if (IncludeQueue)
    "RabbitMQ": "" // Set via environment variable or cloud configuration
#endif
  },

  "Services": {
#if (IncludeCache)
    "Cache": {
      "Enabled": true,
      "DefaultExpiration": "01:00:00"
    },
#endif
#if (IncludeStorage)
    "Storage": {
      "Enabled": true
    },
#endif
#if (IncludeMail)
    "Email": {
      "Provider": "SES" // AWS SES in production
    },
#endif
#if (IncludeQueue)
    "MessageQueue": {
      "Type": "SQS", // Use AWS SQS in production
      "Enabled": true
    },
#endif
#if (IncludeJobs)
    "Jobs": {
      "Enabled": true,
      "DashboardEnabled": false // Disable in production for security
    }
#endif
  },

#if (IncludeStorage)
  "S3": {
    "BucketName": "${S3_BUCKET_NAME}", // Set via environment variable
    "Region": "${AWS_REGION}",
    "ForcePathStyle": false // AWS S3 doesn't need path style
  },
#endif

#if (IncludeMail)
  "Email": {
    "Ses": {
      "Region": "${AWS_REGION}",
      "From": "${FROM_EMAIL}", 
      "FromName": "Company.WebApplication1"
    }
  }
#endif
}