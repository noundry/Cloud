{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
#if (HasDatabase)
    "Database": "${DATABASE_CONNECTION_STRING}",
#endif
#if (IncludeCache)
    "Redis": "${REDIS_CONNECTION_STRING}",
#endif
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}"
  },
#if (IncludeStorage)
  "FileSystemStorage": {
    "BasePath": "${STORAGE_BASE_PATH:-/app/storage}"
  },
#endif
#if (IncludeMail)
  "SmtpSettings": {
    "Host": "${SMTP_HOST}",
    "Port": "${SMTP_PORT:-587}",
    "EnableSsl": "${SMTP_ENABLE_SSL:-true}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromEmail": "${FROM_EMAIL}",
    "FromName": "${FROM_NAME}"
  },
#endif
  "ASPNETCORE_ENVIRONMENT": "Production"
}