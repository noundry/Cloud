{
  "$schema": "http://json.schemastore.org/template",
  "author": "Noundry",
  "classifications": ["Web", "Cloud", "Aspire", "AWS"],
  "identity": "NDC.Templates.Aspire.Aws.WebApp",
  "name": "NDC Aspire Web Application for AWS",
  "shortName": "aspire-webapp-aws",
  "description": "Creates an Aspire-enabled web application optimized for AWS deployment with optional services",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Company.WebApplication1",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": ".NET target framework",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0",
          "description": ".NET 9.0"
        },
        {
          "choice": "net8.0", 
          "description": ".NET 8.0"
        }
      ],
      "defaultValue": "net9.0",
      "replaces": "net9.0"
    },
    "Database": {
      "type": "parameter",
      "description": "Database provider to include",
      "datatype": "choice",
      "choices": [
        {
          "choice": "PostgreSQL",
          "description": "PostgreSQL database"
        },
        {
          "choice": "MySQL", 
          "description": "MySQL database"
        },
        {
          "choice": "SqlServer",
          "description": "SQL Server database"
        },
        {
          "choice": "None",
          "description": "No database"
        }
      ],
      "defaultValue": "PostgreSQL"
    },
    "IncludeCache": {
      "type": "parameter",
      "description": "Include Redis cache service",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "IncludeStorage": {
      "type": "parameter", 
      "description": "Include S3-compatible storage service",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "IncludeMail": {
      "type": "parameter",
      "description": "Include email service",
      "datatype": "bool", 
      "defaultValue": "false"
    },
    "IncludeQueue": {
      "type": "parameter",
      "description": "Include message queue service",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "IncludeJobs": {
      "type": "parameter",
      "description": "Include background jobs service",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "IncludeWorker": {
      "type": "parameter",
      "description": "Include worker service project",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Port": {
      "type": "parameter",
      "description": "Application port",
      "datatype": "integer",
      "defaultValue": "8080"
    },
    "HasDatabase": {
      "type": "computed",
      "value": "(Database != \"None\")"
    },
    "UsePostgreSQL": {
      "type": "computed", 
      "value": "(Database == \"PostgreSQL\")"
    },
    "UseMySQL": {
      "type": "computed",
      "value": "(Database == \"MySQL\")" 
    },
    "UseSqlServer": {
      "type": "computed",
      "value": "(Database == \"SqlServer\")"
    },
    "HasAnyService": {
      "type": "computed",
      "value": "(IncludeCache || IncludeStorage || IncludeMail || IncludeQueue || IncludeJobs)"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!IncludeWorker)",
          "exclude": [
            "src/Company.WebApplication1.Worker/**/*"
          ]
        },
        {
          "condition": "(!HasDatabase)",
          "exclude": [
            "src/Company.WebApplication1.Api/Data/**/*"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "Company.WebApplication1.sln"
    }
  ],
  "postActions": [
    {
      "condition": "(OS != \"Windows_NT\")",
      "description": "Make scripts executable",
      "manualInstructions": [
        {
          "text": "Run 'chmod +x *.sh'"
        }
      ],
      "actionId": "cb9a6cf3-4f5c-4860-b9d2-03a574959774",
      "args": {
        "+x": "*.sh"
      },
      "continueOnError": true
    }
  ]
}