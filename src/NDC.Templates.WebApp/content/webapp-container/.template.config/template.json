{
  "$schema": "http://json.schemastore.org/template",
  "author": "Noundry",
  "classifications": ["Web", "Container", "Docker", "Kubernetes", "Aspire"],
  "identity": "NDC.Templates.WebApp.Container",
  "name": "NDC Web App for Containers",
  "shortName": "webapp-container",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MyApp",
  "preferNameDirectory": true,
  "symbols": {
    "name": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "WebApp1",
      "replaces": "MyApp",
      "fileRename": "MyApp"
    },
    "framework": {
      "type": "parameter", 
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0"
        },
        {
          "choice": "net8.0"
        }
      ],
      "defaultValue": "net9.0",
      "description": "Target framework"
    },
    "database": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include PostgreSQL database support"
    },
    "cache": {
      "type": "parameter",
      "datatype": "bool", 
      "defaultValue": "true",
      "description": "Include Redis cache support"
    },
    "storage": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true", 
      "description": "Include file/S3 storage support"
    },
    "mail": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Include SMTP email support"
    },
    "queue": {
      "type": "parameter", 
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Include RabbitMQ queue support"
    },
    "jobs": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false", 
      "description": "Include background jobs"
    },
    "worker": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Include worker service"
    }
  }
}